{
  "name": "VPSC",
  "version": "0.1",
  "description": "VPSC- Video Playback Speed Controller is a plugin that is used to control the playback speed of any video.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "manifest_version": 2,
  "content_scripts": [
    {
      "js": [
        "background.js"
      ],
      "matches": [
        "https://mega.nz/folder/*",
        "https://www.youtube.com/watch*",
        "https://www.learningcrux.com/video/*",
        "https://learnux.io/course/*"
      ]
    }
  ]
}
